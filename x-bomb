void tablez()
{

    for (int i = 0; i < rows; i++) {
        for (int j = 0; j < columns; j++) {
            printf("|\t%d\t", i * columns + j + 1);
        }
        printf("|\n____________________________\n"); // Move to the next row
    }

}
