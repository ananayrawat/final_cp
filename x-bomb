int minez(int *ptr2,int m)
{
    int y=0;

    if(arr[m]==a||arr[m]==b||arr[m]==c||arr[m]==d||arr[m]==e||arr[m]==f||arr[m]==g||arr[m]==h||arr[m]==s||arr[m]==j||arr[m]==w||arr[m]==l||arr[m]==v||arr[m]==n||arr[m]==o||arr[m]==p)
    {
        printf("\nSad!u popped up a mine\n");

    for (int i = 0; i < rows; i++) {
        for (int j = 0; j < columns; j++) {
                int k=i*columns+j+1;
                if(k==a||k==b||k==c||k==d||k==e||k==f||k==g||k==h||k==i||k==j||k==w||k==l||k==v||k==n||k==o||k==p)
                {
                    _cprintf("|\t*\t");
                }
                else{
                        printf("|\t%d\t", i * columns + j + 1);
                }
        }
        printf("|\n____________________________\n"); // Move to the next row
    }
    y=1;

    }
    else
    {
        printf("\nYou are on a right track\n");
        printf("\n");
        printf("\n");
        printf("\n");
        for (int i = 0; i < rows; i++) {
        for (int j = 0; j < columns; j++) {
                int k=i*columns+j+1;
              for(int x=0;x<i+1;x++)
            {
